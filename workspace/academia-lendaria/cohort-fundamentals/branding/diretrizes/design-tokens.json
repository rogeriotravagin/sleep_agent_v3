{
  "colors": {
    "primary": {
      "teal": "#14B8A6",
      "tealDark": "#0D9488",
      "tealDeep": "#134E4A",
      "white": "#FFFFFF"
    },
    "background": {
      "primary": "#000000",
      "gradientStart": "#000000",
      "gradientEnd": "#0A2E2C",
      "secondary": "#0F0F0F",
      "card": "#1A1A1A",
      "cardHover": "rgba(20, 184, 166, 0.05)",
      "modal": "#252525"
    },
    "state": {
      "success": "#22C55E",
      "warning": "#EAB308",
      "error": "#EF4444",
      "info": "#3B82F6"
    },
    "text": {
      "primary": "#FFFFFF",
      "secondary": "#A3A3A3",
      "muted": "#6B7280"
    },
    "border": {
      "standard": "#2A2A2A",
      "light": "#3A3A3A",
      "teal": "#14B8A6",
      "white": "#FFFFFF"
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem"
  },
  "typography": {
    "fontFamily": {
      "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "lineHeight": {
      "xs": "1rem",
      "sm": "1.25rem",
      "base": "1.5rem",
      "lg": "1.75rem",
      "xl": "1.75rem",
      "2xl": "2rem",
      "3xl": "2.25rem",
      "4xl": "2.5rem",
      "5xl": "1"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },
  "borderRadius": {
    "sm": "0.5rem",
    "md": "0.75rem",
    "lg": "1rem",
    "xl": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "subtle": "0 1px 2px rgba(0,0,0,0.3)",
    "card": "0 4px 6px rgba(0,0,0,0.4)",
    "elevated": "0 10px 25px rgba(0,0,0,0.5)",
    "glowTeal": "0 0 20px rgba(20, 184, 166, 0.2)",
    "glowTealSubtle": "0 0 15px rgba(20, 184, 166, 0.1)",
    "glowTealStrong": "0 0 30px rgba(20, 184, 166, 0.3)"
  },
  "gradients": {
    "hero": "linear-gradient(180deg, #000000 0%, #0A2E2C 100%)",
    "cardHover": "linear-gradient(135deg, rgba(20, 184, 166, 0.08) 0%, transparent 100%)",
    "radialTeal": "radial-gradient(circle at center, rgba(20, 184, 166, 0.15), transparent 70%)",
    "pillBackground": "radial-gradient(ellipse at center, rgba(20, 184, 166, 0.1), transparent)"
  },
  "transitions": {
    "fast": "0.2s ease",
    "normal": "0.3s ease"
  },
  "layout": {
    "sidebar": {
      "width": "220px"
    },
    "content": {
      "maxWidth": "1200px",
      "marginLeft": "220px"
    },
    "breakpoints": {
      "mobile": "768px"
    }
  },
  "components": {
    "pill": {
      "borderRadius": "9999px",
      "padding": "0.75rem 1.5rem",
      "border": "2px solid",
      "fontWeight": "500",
      "transition": "0.2s ease",
      "variants": {
        "hero": {
          "borderColor": "#FFFFFF",
          "color": "#FFFFFF",
          "background": "transparent"
        },
        "interactive": {
          "borderColor": "#14B8A6",
          "color": "#14B8A6",
          "background": "rgba(20, 184, 166, 0.1)"
        },
        "label": {
          "borderColor": "#14B8A6",
          "padding": "0.5rem 1rem",
          "fontSize": "0.875rem"
        }
      }
    },
    "button": {
      "borderRadius": "9999px",
      "padding": "0.75rem 1.5rem",
      "fontWeight": "500",
      "transition": "0.2s ease",
      "variants": {
        "primary": {
          "background": "#14B8A6",
          "color": "#000000"
        },
        "outline": {
          "background": "transparent",
          "border": "2px solid #14B8A6",
          "color": "#14B8A6"
        }
      }
    },
    "card": {
      "background": "#1A1A1A",
      "borderRadius": "1rem",
      "padding": "1.5rem",
      "border": "1px solid #2A2A2A"
    },
    "badge": {
      "borderRadius": "9999px",
      "padding": "0.25rem 0.75rem",
      "fontSize": "0.75rem",
      "fontWeight": "500",
      "variants": {
        "teal": {
          "background": "rgba(20, 184, 166, 0.15)",
          "color": "#14B8A6"
        }
      }
    },
    "input": {
      "background": "#1A1A1A",
      "border": "1px solid #2A2A2A",
      "borderRadius": "0.75rem",
      "padding": "0.75rem 1rem",
      "fontSize": "1rem",
      "focusBorder": "2px solid #14B8A6"
    },
    "progressStep": {
      "size": "44px",
      "border": "2px solid #3A3A3A",
      "fontSize": "1rem",
      "active": {
        "background": "#14B8A6",
        "color": "#000000"
      }
    }
  }
}
